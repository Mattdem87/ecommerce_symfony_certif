{% extends 'base.html.twig' %}

{% block title %}Valider ma commande - ShoeShop
{% endblock %}

{% block content %}

	<h2>Je passe ma commande</h2>

	<p>Choississez vos préférences avant de passer votre commande.</p>
	<hr>
	<br>
	<div class="row">
		<div class="col-md-6">

			{% set formHtml %}

			{{  form_start(form, {action:path('order_recap')})}}



			{{  form_end(form)}}

				{% endset %}

				{{  formHtml|replace({'[br]' : '<br/>'})|raw }}

			</div>

			<div class="col-md-6">

				<div class="text-center">

					<b>Récapitulatif de ma commande</b><br>

				</div>
				

				<div class="order-summary">


					{% for key, product in cart %}

						<div class="row {% if key > 0  %}mt-2{% endif %}">

							<div class="col-2">
								<img src="/uploads/{{ product.product.illustration }}" alt="{{ product.product.name }}" height="50px">
								<br>
							</div>
							<div class="col-6 my-auto">

								<small>{{ product.product.name }}</small>

							</div>
							<div class="col-3 my-auto">

								x
								{{ product.quantity }}

							</hr>

						</div>

					</div>


				{% endfor %}
			</div>

		</div>

	</div>

{% endblock %}

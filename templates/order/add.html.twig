{% extends 'base.html.twig' %}

{% block title %}Paiement ma commande - ShoeShop
{% endblock %}

{% block content %}

	<h2>Mon récapitulatif</h2>

	<p>Vérifier vos informations avant de procéder au paiement</p>
	<hr>
	<br>
	<div class="row">
		<div class="col-md-6">

			<strong>Mon adresse de livraison</strong>
			<br>
			<div class="form-check mt-4">
				{{ delivery|raw}}
			</div>

			<hr>

			<strong>Mon transporteur</strong>
			<br>
			<div class="form-check">
				{{ carrier.name }}
				<br>
				{{ carrier.description }}
				<br>
				{{ carrier.price | number_format(2, ',', '.')}}€
			</div>

		</div>

		<div class="col-md-6">

			<div class="text-center">

				<b>Ma commande</b><br>

			</div>


			<div class="order-summary">

				{% set total = null %}
				{% for key, product in cart %}

					<div class="row {% if key > 0  %}mt-2{% endif %}">

						<div class="col-2">
							<img src="/uploads/{{ product.product.illustration }}" alt="{{ product.product.name }}" height="50px">
							<br>
						</div>
						<div class="col-6 my-auto">

							<small>{{ product.product.name }}</small><br>
							x
							{{ product.quantity }}

						</div>
						<div class="col-3 my-auto">

							{{ ((product.product.price * product.quantity ) / 100) | number_format(2, ',', '.')}}€

						</hr>

					</div>

				</div>

				{% set total = total + (product.product.price * product.quantity ) %}
			{% endfor %}
		</div>
		<hr>
		<strong>Sous-Total :
		</strong>
		{{ ( total / 100) | number_format(2, ',', '.')}}€<br>
		<strong>livraison :
		</strong>
		{{ ( carrier.price) | number_format(2, ',', '.')}}€<br>
		<strong>Total :</strong>
		{{ (( total / 100) + carrier.price) | number_format(2, ',', '.')}}€<br>

		<div>
			<form action="{{ path('stripe_checkout') }}" method="POST">
				<button type="submit" id="checkout-button" class="btn btn-success btn-block">Payer
			{{ (( total / 100) + carrier.price) | number_format(2, ',', '.')}}€</button>
			</form>
		</div>
	</div>

</div>{% endblock %}

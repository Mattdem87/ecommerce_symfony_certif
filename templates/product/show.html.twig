{% extends 'base.html.twig' %}

{% block title %}
	{{ product.name }}- shoeShop
{% endblock %}

{% block content %}

	<div class="row">

		<div class="col-md-5">

			<img src="/uploads/products/{{ product.illustration }}" alt="{{ product.name }}" class="img-fluid">

		</div>
		<div class="col-md-7 my-auto">

			<h3>{{ product.name }}</h3>

			<p>{{ product.subtittle }}</p>

			{{ (product.price / 100) | number_format(2, ',', '.')}}
			€

			<hr>

			<p>

				{{ product.description }}

			</p>

			<br>

			<a href="{{ path('add_cart',{ 'id' : product.id } ) }}" class="btn btn-warning">Ajouter au panier</a>

			<br><br>

			<a href="{{ path('products') }}" class="btn btn-primary">Retour à la liste</a>
		</div>
	</div>

	<hr>
		<h3>Nos meilleurs produits</h3>
	<div class="row">
		{% for product in products %}

			<div class="col-md-3">
				{% include "product/single_product.html.twig" %}
			</div>
			
		{% endfor %}
	</div>


{% endblock %}
